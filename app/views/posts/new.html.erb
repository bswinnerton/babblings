<div class="new-post col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
<%= form_for(@post) do |f| %>
  <% @post.errors.full_messages.each do |error| %>
    <div id="error"><%= error %></div>
  <% end %>
  <%= f.text_field :content, value: "enter your text, image, or video", onfocus: "if (this.value == 'enter your text, image, or video') {this.value = '';}", onblur: "if (this.value == '') {this.value = 'enter your text, image, or video';}" %>
<% end %>
</div>
