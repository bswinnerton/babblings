<div class="row">
  <% @posts.to_enum.with_index(1).each do |post, i| %>
    <div class="post-box col-lg-4 col-md-4 col-sm-4">
      <%= link_to image_tag(post.content, class: 'img-responsive img-thumbnail'), post %>
    </div>

    <% if i % 3 == 0 %>
      </div>
      <div class="row">
    <% end %>
  <% end %>
</div>
